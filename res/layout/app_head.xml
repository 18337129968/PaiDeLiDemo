<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_head"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/jifen_title_bg"
    tools:ignore="Overdraw" >

    <Button
        android:id="@+id/btn_head_left"
        android:layout_width="48dp"
        android:layout_height="26dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="5dp"
        android:background="@drawable/btn_back"
        android:text="@string/back"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/top_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="@dimen/top_textsize" />

    <Button
        android:id="@+id/btn_top_right"
        android:layout_width="48dp"
        android:layout_height="26dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:layout_alignTop="@+id/btn_head_left"
        android:background="@drawable/button_filleted"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:visibility="invisible" />

    <FrameLayout
        android:id="@+id/btn_top_right2"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/btn_top_right"
        android:layout_alignParentRight="true"
        android:paddingRight="2dp"
        android:visibility="gone" >

        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="26dp"
            android:layout_gravity="center|right|bottom"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_filleted"
            android:visibility="invisible" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="48dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="清单"
                android:textColor="@color/white" />
        </FrameLayout>

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/message_bg"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone" />
    </FrameLayout>

</RelativeLayout>